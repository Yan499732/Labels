@page

@{ 
    ViewBag.Title = "LabelsLogic";
}
<html>
<head>
    <title>Сервис генерации документов</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <style>
        form {
            width: 500px;
            height: 530px;
            position: absolute;
            top: 50%;
            left: 50%;
            margin-right: -50%;
            transform: translate(-50%, -50%);
            z-index: 1;
        }

        p {
            margin-top: 10px;
            margin-bottom: -1px;
            text-align: center;
        }

        textarea {
            height: 300px;
            resize: none;
        }

        div {
            border-radius: 4px;
            width: 525px;
            height: 530px;
            position: absolute;
            top: 50%;
            left: 50%;
            margin-right: -50%;
            transform: translate(-50%, -50%);
            z-index: -1;
            clear: both;
        }

        h2 {
            margin-top: 10px;
            text-align: center;
        }
    </style>
</head>
<body>
    @using (Html.BeginForm())
    {
    <h2>Сервис генерации документов</h2>
    <p><label>Поле для URL-адреса:</label></p>
    <p><input type="text" class="form-control" name="URL" /></p>
    <p><label>Поле для меток:</label></p>
    <p><textarea class="form-control" name="labels"></textarea></p>
    <p><button class="btn btn-success">Начать</button></p>
    }
    <div class="alert alert-success"></div>
</body>
</html>
